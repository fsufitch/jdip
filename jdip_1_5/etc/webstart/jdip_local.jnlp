	  <jar href="lib/jade.jar" />
	  <jar href="lib/jcmdline-1.0.1.jar" />
	  <jar href="lib/JSX2.0.9.6.jar" />
	  <jar href="lib/pdf-transcoder.jar" />
	  <jar href="lib/xerces_2_3_0.jar" />
	  <jar href="lib/xml-apis.jar" />
	
	<!-- NOTE: this is signed by a separate certificate! -->
	<extension name="Java Help" href="help.jnlp"/>
  </resources>     
  
  <application-desc main-class="dip.gui.splash"/>
</jnlp>

